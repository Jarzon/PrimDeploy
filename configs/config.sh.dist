formatEcho () {
	if [ -z "$1" ]
	then
		echo "";
	else
		printf "\n-----------------------------------------------------------------\n|                                                               |\n|  %-60s |\n|                                                               |\n-----------------------------------------------------------------\n" "$1";
	fi

   return 0
}